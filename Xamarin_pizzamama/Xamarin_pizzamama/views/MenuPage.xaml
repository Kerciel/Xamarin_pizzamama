<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_pizzamama.views.MenuPage">
    <NavigationPage.TitleView>
        <StackLayout HorizontalOptions="Center" 
				Margin="{OnPlatform iOS='0,0,25,0', Android='0,0,20,0', Default=0}"
				Orientation="Horizontal">

            <Image Source="pizza_logo.png" HeightRequest="40" />
            <Label Text="Pizzas-Eat" 
			FontAttributes="Bold"
			TextColor="White" VerticalOptions="Center" />
        </StackLayout>


    </NavigationPage.TitleView>
    <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="30,0,30,0" >
        <Label x:Name="TITRE" HorizontalOptions="Center" TextColor="#DC8D2D" VerticalOptions="Center" Text="Bienvenu dans Pizza-Eat" FontSize="Large" Margin="0, 80"/>
        <Button  HorizontalOptions="FillAndExpand" VerticalOptions="Center" TextColor="White" BackgroundColor="#DC8D2D" Margin="0, 10" CornerRadius="20" Text="Menu Pizza" Clicked="NavPizza"/>
        <Button  HorizontalOptions="FillAndExpand" VerticalOptions="Center"  TextColor="White" BackgroundColor="#DC8D2D" Margin="0, 10" CornerRadius="20" Text="Nos Contacts" Clicked="NavContact"/>
    </StackLayout>
</ContentPage>